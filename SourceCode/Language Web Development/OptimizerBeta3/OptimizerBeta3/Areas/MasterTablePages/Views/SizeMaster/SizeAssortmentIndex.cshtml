@model IEnumerable<OptimizerBeta3.Models.MasterTables.SizeAssortment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var sizeMaster = (OptimizerBeta3.Models.MasterTables.SizeMaster)TempData["SizeMaster"];
}
@*@{TempData.Keep("sizeMaster");}*@
<br />
<div class="border backgroudColor">
    <div class="backgroudWhite10Px">
        <div class="row">
            <div class="col-6">
                <h2 class="text-success">Size Master for Creating Assortment's</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Size Category</label>
            </div>
            <div class="col-3">
                @sizeMaster.FKSizeCategory;
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Size For</label>
            </div>
            <div class="col-3">
                @sizeMaster.FKSizeFor;
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Code</label>
            </div>
            <div class="col-3">
                @sizeMaster.Code;
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Description</label>
            </div>
            <div class="col-3">
                @sizeMaster.Description;
            </div>
        </div>
    </div>
</div>


<div class="border backgroudColor">
    <div class="row">
        <div class="col-4">
            <h2 class="text-info">Size Assortment's - Index</h2>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-info text-white" asp-action="SizeAssortmentCreate" asp-route-id=@sizeMaster.Id>
                <i class="fas fa-plus"></i>
                Create
            </a>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-success text-white  form-control" asp-action="Index">
                Back to Size Master
            </a>
        </div>
    </div>
    <div></div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.TotalQuantity)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.TotalQuantity)
                        </td>
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="SizeAssortmentEdit" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a class="btn btn-success text-white" asp-action="SizeAssortmentDetail" asp-route-Id="@item.Id">
                                    <i class="fas fa-list-alt"></i>
                                </a>

                                <a class="btn btn-danger text-white" asp-action="SizeAssortmentDelete" asp-route-Id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No Assortment's exists.....</p>
        }
    </div>
</div>




