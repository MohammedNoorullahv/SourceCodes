@model IEnumerable<OptimizerBeta3.Models.MasterTables.SizeMaster>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroudColor">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Size Master - Index</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartialView" />
        </div>
    </div>
    <div></div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.FKSizeCategory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FKSizeFor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.LookUpSizeCategory.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => item.LookUpSizeFor.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td>
                    <a class="btn btn-warning text-black" asp-action="SizeAssortmentIndex" asp-route-id="@item.Id">
                        Assortment's
                    </a>
                </td>
                <td style="width:150px">
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p> No Company Info exists.....</p>
        }
    </div>
</div>




