@model IEnumerable<OptimizerBeta3.Models.MasterTables.PartyInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroudColor">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Party Info - Index</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartialView" />
        </div>
    </div>
    <div></div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.FKCategory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Address1)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.LookUpMasterCategory.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Address1)
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
                @*<td>
                    @if (@item.FKCategory == 17)
                    {
                        <a class="btn btn-info text-black" asp-action="SalesPromotionIndex" asp-route-id="@item.Id">
                            Sales Promotion
                        </a>
                    }
                </td>*@
                @*<td style="width:150px">
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>*@
            </tr>
                }
            </table>
        }
        else
        {
            <p> No Party Info exists.....</p>
        }
    </div>
</div>




