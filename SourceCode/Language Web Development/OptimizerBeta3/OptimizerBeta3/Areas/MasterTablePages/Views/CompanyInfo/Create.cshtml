@model OptimizerBeta3.Models.ViewModels.MasterTables.CompanyInfoViewModel
@using OptimizerBeta3.Extensions


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroudColor">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Company Info - Create</h2>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
    <div></div>
    <br />
</div>

@*<partial name="_StatusMessage" model="Model.StatusMessage" />*@


<div class="border backgroudColor row">
    <div class="col-12 backgroudWhite border-right">
        <form method="post" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.Code" class="col-form-label text-info"></label>
                </div>
                <div class="col-5" style="background-color:  lightpink">
                    <input asp-for="CompanyInfo.Code" readonly value="{AUTO}" class="form-control" />
                </div>
                
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.CompanyName" class="col-form-label text-info"></label>
                </div>
                <div class="col-5" style="background-color:  lightpink">
                    <input asp-for="CompanyInfo.CompanyName" class="form-control" style="background-color:  lightpink" />
                </div>
                <span asp-validation-for="CompanyInfo.CompanyName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.ShortName" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CompanyInfo.ShortName" class="form-control" />
                </div>
                <span asp-validation-for="CompanyInfo.ShortName" class="text-danger text-info"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.Address1" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CompanyInfo.Address1" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.Address2" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CompanyInfo.Address2" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.FKArea" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.CompanyInfo.FKArea" id="FKArea" asp-items="Model.FKArea.ToSelectListItem(Model.CompanyInfo.FKArea)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.FKCity" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.CompanyInfo.FKCity" id="FKCity" asp-items="Model.FKCity.ToSelectListItem(Model.CompanyInfo.FKCity)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.FKPincode" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.CompanyInfo.FKPincode" id="FKPincode" asp-items="Model.FKPincode.ToSelectListItem(Model.CompanyInfo.FKPincode)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.FKState" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.CompanyInfo.FKState" id="FKArea" asp-items="Model.FKState.ToSelectListStateName(Model.CompanyInfo.FKState)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.ContactPersonName" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CompanyInfo.ContactPersonName" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.ContactNo" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CompanyInfo.ContactNo" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.MailId" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CompanyInfo.MailId" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.PANNumber" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CompanyInfo.PANNumber" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CompanyInfo.GSTNumber" class="col-form-label text-info"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CompanyInfo.GSTNumber" class="form-control"/>
                </div>
            </div>

            <input asp-for="CompanyInfo.IsActive" readonly class="form-control" value="@true" type="hidden" />
            <input asp-for="CompanyInfo.EnteredSystemId" readonly class="form-control" value="" type="hidden" />
            <input asp-for="CompanyInfo.CreatedBy" readonly class="form-control" value="1" type="hidden" />
            <input asp-for="CompanyInfo.CreatedDate" readonly class="form-control" value="@DateTime.Now" type="datetime" type="hidden" />
            <input asp-for="CompanyInfo.ModifiedBy" readonly class="form-control" value="1" type="hidden" />
            <input asp-for="CompanyInfo.ModifiedDate" readonly class="form-control" value="@DateTime.Now" type="datetime" type="hidden" />
            <input asp-for="CompanyInfo.DeleteBy" readonly class="form-control" value="1" type="hidden" />
            <input asp-for="CompanyInfo.DeletedDate" readonly class="form-control" value="@DateTime.Now" type="datetime" type="hidden" />

            <div class="form-group row">
                <div class="col-6 offset-3">
                    <partial name="_CreateandBacktoListButton" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            getLookUpMst();
        })

          function getLookUpMst() {
            var url = '@Url.Content("~/")' + "Admin/CompanyInfo/GetLookUpMst";
            var ddlSource = '#LkUpHdrId';
            $.getJSON(url, { id: $(ddlsoruce).val() }, function (data) {
                var items = '';
                $('#FKArea').empty();
                $.each(data, function (i, Area) {
                    items += "<option value='" + Area.value + "'>" + Area.text + "</option>";
                });

                $('#FKArea').html(items);
            })
        }



    </script>


}
