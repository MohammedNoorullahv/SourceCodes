@model IEnumerable<OptimizerBeta3.Models.MasterTables.AreaLookUpMaster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Area Look Up Master - Index</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartialView" />
        </div>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th> @Html.DisplayNameFor(m => m.Category) </th>
                <th> @Html.DisplayNameFor(m => m.FKAreaLookUpMaster) </th>
                <th> @Html.DisplayNameFor(m => m.Description) </th>
                <th> @Html.DisplayNameFor(m => m.Code) </th>
                <th><label>Actions</label></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td> @Html.DisplayFor(m => item.Category) </td>
            <td> @Html.DisplayFor(m => item.FKAreaLookUpMaster) </td>
            <td> @Html.DisplayFor(m => item.Description) </td>
            <td> @Html.DisplayFor(m => item.Code) </td>
            <td style="width:150px">
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
            }
        </table>
    }
    else
    {
        <p> No Area Look Up Master exists.....</p>
    }
</div>
