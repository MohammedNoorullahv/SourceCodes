@model OptimizerBeta3.Models.ViewModels.MasterTables.ArticleGroupViewModel
@using OptimizerBeta3.Extensions


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroudColor">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Article - Edit</h2>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
    <div></div>
    <br />
</div>

@*<partial name="_StatusMessage" model="Model.StatusMessage" />*@


<div class="border backgroudColor row">
    <div class="col-12 backgroudWhite border-right">
        <form method="post" asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.FKCategory" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-2">
                    <select asp-for="@Model.ArticleGroup.FKCategory" asp-items="Model.FKCategory.ToSelectListItem(Model.ArticleGroup.FKCategory)" class="form-control"></select>
                </div>
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.FKSeason" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-2">
                    <select asp-for="@Model.ArticleGroup.FKSeason" asp-items="Model.FKSeason.ToSelectListItem(Model.ArticleGroup.FKSeason)" class="form-control"></select>
                </div>
                <div class="col-sm-2">
                    <label asp-for="ArticleGroup.IsSeasonSpecific" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-1">
                    <input type="checkbox" asp-for="ArticleGroup.IsSeasonSpecific" class="form-control" />
                </div>
                <div class="col-3">
                    <a asp-action="LookUpMasterCreate" class="btn btn-success form-control">Look Up Master</a>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.FKGroup" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-2">
                    <select asp-for="@Model.ArticleGroup.FKGroup" asp-items="Model.FKGroup.ToSelectListItem(Model.ArticleGroup.FKGroup)" class="form-control"></select>
                </div>
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.FKBrand" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-2">
                    <select asp-for="@Model.ArticleGroup.FKBrand" asp-items="Model.FKBrand.ToSelectListItem(Model.ArticleGroup.FKBrand)" class="form-control"></select>
                </div>
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.FKProduct" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-2">
                    <select asp-for="@Model.ArticleGroup.FKProduct" asp-items="Model.FKProduct.ToSelectListItem(Model.ArticleGroup.FKProduct)" class="form-control"></select>
                </div>
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.VersionNo" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-1">
                    <input asp-for="ArticleGroup.VersionNo" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.ArticleNo" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="ArticleGroup.ArticleNo" id="ArticleNo" oninput="generateStockNo(this.id)" class="form-control" />
                </div>
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.ArticleName" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-2">
                    <input asp-for="ArticleGroup.ArticleName" class="form-control" />
                </div>
                <div class="col-sm-2">
                    <label asp-for="ArticleGroup.Description" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-4" style="background-color:  lightpink">
                    <input asp-for="ArticleGroup.Description" class="form-control" style="background-color:  lightpink" />
                </div>
                <span asp-validation-for="ArticleGroup.Description" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.FKAssortmentGroup" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-2">
                    <select asp-for="@Model.ArticleGroup.FKAssortmentGroup" asp-items="Model.FKAssortmentGroup.ToSelectListItem(Model.ArticleGroup.FKAssortmentGroup)" class="form-control"></select>
                </div>
                <div class="col-sm-1">
                    <label asp-for="ArticleGroup.FKSizeFor" class="col-form-label text-info"></label>
                </div>
                <div class="col-sm-3">
                    <select asp-for="@Model.ArticleGroup.FKSizeFor" asp-items="Model.FKSizeFor.ToSelectListItem(Model.ArticleGroup.FKSizeFor)" class="form-control"></select>
                </div>
            </div>

            <input asp-for="ArticleGroup.ModifiedBy" readonly class="form-control" value="1" type="hidden" />
            <input asp-for="ArticleGroup.ModifiedDate" readonly class="form-control" value="@DateTime.Now" type="datetime" type="hidden" />

            <div class="form-group row">
                <div class="col-6 offset-3">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-info form-control" asp-route-id="@Model.ArticleGroup.Id" value="Update" />
                        </div>
                        <div class="col-6">
                            <a class="btn btn-success text-white  form-control" asp-action="Index">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

