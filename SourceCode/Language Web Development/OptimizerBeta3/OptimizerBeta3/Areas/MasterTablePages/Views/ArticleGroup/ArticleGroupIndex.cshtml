@model IEnumerable<OptimizerBeta3.Models.MasterTables.ArticleGroup>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="border backgroudColor">
    <div class="backgroudWhite10Px">
        <div class="row">
            <div class="col-6">
                <h2 class="text-success">Party Info for Creating Articles</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Company Code</label>
            </div>
            <div class="col-3">
                @TempData["PICode"]
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Party Type</label>
            </div>
            <div class="col-3">
                @TempData["PIGST"]
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Company Name</label>
            </div>
            <div class="col-3">
                @TempData["PICompanyName"]
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Address</label>
            </div>
            <div class="col-3">
                @TempData["PIAddress"]
            </div>
        </div>
    </div>
</div>

<div class="border backgroudColor">
    <div class="row">
        <div class="col-4">
            <h2 class="text-info">Article Group - Index</h2>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-info text-white" asp-action="Create" asp-route-id=@TempData["PIId"]>
                <i class="fas fa-plus"></i>
                Create
            </a>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-success text-white  form-control" asp-action="Index">
                Back to Party Master
            </a>
        </div>
    </div>
    <div></div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Product)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ArticleNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ArticleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.VersionNo)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Product)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ArticleNo)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ArticleName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.VersionNo)
                        </td>
                        <td>
                            <a class="btn btn-warning text-black" asp-action="ArticleDetailIndex" asp-route-id="@item.Id">
                                Article Dtl
                            </a>
                        </td>
                        <td style="width:150px">
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No Article exists.....</p>
        }
    </div>
</div>


