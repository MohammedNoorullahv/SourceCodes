@model OptimizerBeta3.Models.MasterTables.LookUpCategory
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroudColor">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Look Up Category - Edit</h2>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
    <div></div>
    <br />
</div>

<form method="post" asp-action="Edit" class="border backgroudColor">
    <div class="border backgroudWhite">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SlNo" class="col-form-label">Sl. No</label>
            </div>
            <div class="col-2">
                <input asp-for="SlNo" class="form-control" />
            </div>
            <span asp-validation-for="SlNo" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label">Description</label>
            </div>
            <div class="col-5">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ShortCode" class="col-form-label">Short Code</label>
            </div>
            <div class="col-5">
                <input asp-for="ShortCode" class="form-control" />
            </div>
        </div>

        @*<input asp-for="IsActive" readonly class="form-control" value="@true" type="hidden" />
            <input asp-for="ModifiedBy" readonly class="form-control" value="1" type="hidden" />
            <input asp-for="ModifiedDate" readonly class="form-control" value="@DateTime.Now" type="hidden" />*@

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditandBacktoListButtonPartialView" model="Model.Id" />
            </div>
        </div>
    </div>
</form>





