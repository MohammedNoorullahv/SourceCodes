@model IEnumerable<OptimizerBeta3.Models.MasterTables.MaterialDetails>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroudColor">
    <div class="backgroudWhite10Px">
        <div class="row">
            <div class="col-6">
                <h2 class="text-success">Materials Info for Details Updates</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Code</label>
            </div>
            <div class="col-3">
                @TempData["Code"]
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Category</label>
            </div>
            <div class="col-3">
                @TempData["Category"]
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Type</label>
            </div>
            <div class="col-3">
                @TempData["Type"]
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Sub Type</label>
            </div>
            <div class="col-3">
                @TempData["SubType"]
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Description</label>
            </div>
            <div class="col-9">
                @TempData["Description"]
            </div>
        </div>
    </div>
</div>


<div class="border backgroudColor">
    <div class="row">
        <div class="col-4">
            <h2 class="text-info">Material Detail - Index</h2>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-info text-white" asp-action="MaterialDetailCreate" asp-route-id=@TempData["Id"]>
                <i class="fas fa-plus"></i>
                Create
            </a>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-success text-white  form-control" asp-action="Index">
                Back to Materials
            </a>
        </div>
    </div>
    <div></div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.FKParty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FKCurrency)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Rate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.IsPrimeSupplier)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ApplicableFrom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ApplicableTo)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.FKParty)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.FKCurrency)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Rate)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.IsPrimeSupplier)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ApplicableFrom)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ApplicableTo)
                        </td>
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="MaterialDetailEdit" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a class="btn btn-success text-white" asp-action="MaterialDetailDetail" asp-route-Id="@item.Id">
                                    <i class="fas fa-list-alt"></i>
                                </a>

                                <a class="btn btn-danger text-white" asp-action="MaterialDetailDelete" asp-route-Id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No Materials exists.....</p>
        }
    </div>
</div>




