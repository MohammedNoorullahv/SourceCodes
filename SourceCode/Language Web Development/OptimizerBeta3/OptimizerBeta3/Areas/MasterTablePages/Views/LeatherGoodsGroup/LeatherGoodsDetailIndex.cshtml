@model IEnumerable<OptimizerBeta3.Models.MasterTables.LeatherGoodsDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@{
    var lgGroup = (OptimizerBeta3.Models.MasterTables.LeatherGoodsGroup)TempData["LeatherGoods"];
}

<div class="border backgroudColor">
    <div class="backgroudWhite10Px">
        <div class="row">
            <div class="col-6">
                <h2 class="text-success">Leather Goods Group for Creating Leather Goods Details</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Article No</label>
            </div>
            <div class="col-3">
                @lgGroup.ArticleNo;
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Article Name</label>
            </div>
            <div class="col-3">
                @lgGroup.ArticleName;
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Description</label>
            </div>
            <div class="col-9">
                @lgGroup.Description;
            </div>
        </div>
    </div>
</div>

<div class="border backgroudColor">
    <div class="row">
        <div class="col-4">
            <h2 class="text-info">Leather Goods Detail - Index</h2>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-info text-white" asp-action="LeatherGoodsDetailCreate" asp-route-id=@lgGroup.Id>
                <i class="fas fa-plus"></i>
                Create
            </a>

            @*<a class="btn btn-info text-white" asp-action="CreateInvoiceDetailForScanning" asp-route-id=@invoice.Id>
                <i class="fas fa-plus"></i>
                Create
            </a>*@
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-success text-white  form-control" asp-action="Index">
                Back to Leather Goods Group
            </a>
        </div>
    </div>
    <div></div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.StockNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FKLeather)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ColorMaster)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.StockNo)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.FKLeather)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ColorMaster)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.StockNo)
                        </td>
                        <td style="width:150px">
                            @*<partial name="_TableButtonPartial" model="item.Id" />*@
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="LeatherGoodsDetailEdit" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a class="btn btn-success text-white" asp-action="LeatherGoodsDetailDetail" asp-route-Id="@item.Id">
                                    <i class="fas fa-list-alt"></i>
                                </a>

                                <a class="btn btn-danger text-white" asp-action="LeatherGoodsDetailDelete" asp-route-Id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No Leather Goods exists.....</p>
        }
    </div>
</div>


