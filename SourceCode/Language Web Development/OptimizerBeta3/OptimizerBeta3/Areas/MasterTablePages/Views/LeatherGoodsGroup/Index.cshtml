@model IEnumerable<OptimizerBeta3.Models.MasterTables.LeatherGoodsGroup>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />


<div class="border backgroudColor">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Leather Goods Group - Index</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartialView" />
        </div>
    </div>
    <div></div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Product)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ArticleNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ArticleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.VersionNo)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Product)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ArticleNo)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ArticleName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.VersionNo)
                        </td>
                        <td>
                            <a class="btn btn-warning text-black" asp-action="LeatherGoodsDetailIndex" asp-route-id="@item.Id">
                                Article Dtl
                            </a>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                        <td style="width:150px">
                            @*<partial name="_TableButtonPartial" model="item.Id" />*@
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> No Items exists.....</p>
        }
    </div>
</div>


