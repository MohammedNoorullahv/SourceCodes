@model OptimizerBeta3.Models.ViewModels.MasterTables.LeatherGoodsGroupViewModel
@using OptimizerBeta3.Extensions


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroudColor">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Leather Goods - Edit</h2>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
    <div></div>
    <br />
</div>

@*<partial name="_StatusMessage" model="Model.StatusMessage" />*@


<div class="border backgroudColor row">
    <div class="col-12 backgroudWhite border-right">
        <form method="post" asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="LeatherGoodsGroup.FKCategory" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.LeatherGoodsGroup.FKCategory" asp-items="Model.FKCategory.ToSelectListItem(Model.LeatherGoodsGroup.FKCategory)" class="form-control"></select>
                </div>
                <div class="col-3"></div>
                <div class="col-3">
                    <a asp-action="LookUpMasterCreate" class="btn btn-success form-control">Look Up Master</a>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="LeatherGoodsGroup.FKBrand" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.LeatherGoodsGroup.FKBrand" asp-items="Model.FKBrand.ToSelectListItem(Model.LeatherGoodsGroup.FKBrand)" class="form-control"></select>
                </div>
                <div class="col-3">
                    <label asp-for="LeatherGoodsGroup.FKProduct" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.LeatherGoodsGroup.FKProduct" asp-items="Model.FKProduct.ToSelectListItem(Model.LeatherGoodsGroup.FKProduct)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="LeatherGoodsGroup.ArticleNo" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="LeatherGoodsGroup.ArticleNo" id="ArticleNo" oninput="generateStockNo(this.id)" class="form-control" />
                </div>
                <div class="col-3">
                    <label asp-for="LeatherGoodsGroup.ArticleName" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="LeatherGoodsGroup.ArticleName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="LeatherGoodsGroup.FKGroup" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.LeatherGoodsGroup.FKGroup" asp-items="Model.FKGroup.ToSelectListItem(Model.LeatherGoodsGroup.FKGroup)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-3">
                    <label asp-for="LeatherGoodsGroup.Description" class="col-form-label text-info"></label>
                </div>
                <div class="col-3" style="background-color:  lightpink">
                    <input asp-for="LeatherGoodsGroup.Description" class="form-control" style="background-color:  lightpink" />
                </div>
                <span asp-validation-for="LeatherGoodsGroup.Description" class="text-danger"></span>
                <div class="col-3">
                    <label asp-for="LeatherGoodsGroup.VersionNo" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="LeatherGoodsGroup.VersionNo" class="form-control" />
                </div>
            </div>


            <input asp-for="LeatherGoodsGroup.ModifiedBy" readonly class="form-control" value="1" type="hidden" />
            <input asp-for="LeatherGoodsGroup.ModifiedDate" readonly class="form-control" value="@DateTime.Now" type="datetime" type="hidden" />

            <div class="form-group row">
                <div class="col-6 offset-3">
                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-info form-control" asp-route-id="@Model.LeatherGoodsGroup.Id" value="Update" />
                        </div>
                        <div class="col-6">
                            <a class="btn btn-success text-white  form-control" asp-action="Index">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

