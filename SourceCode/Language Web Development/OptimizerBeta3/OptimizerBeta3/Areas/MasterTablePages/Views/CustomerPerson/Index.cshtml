@model IEnumerable<OptimizerBeta3.Models.MasterTables.CustomerPerson>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <br />
    <br />
    <div class="border backgroudColor">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Customer Person - Index</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartialView" />
            </div>
        </div>
        <div></div>
        <br />

        <div>
            @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.PersonName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FKCity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MobileNo)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.PersonName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(m => item.FKCity)
                </td>
                <td>
                    @Html.DisplayFor(m => item.MobileNo)
                </td>
                <td style="width:150px">
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p> No Persons exists.....</p>
        }
        </div>
    </div>

