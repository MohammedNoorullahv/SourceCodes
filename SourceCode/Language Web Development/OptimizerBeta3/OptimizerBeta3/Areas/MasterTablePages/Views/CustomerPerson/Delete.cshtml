                </div>
                <div class="col-6" style="background-color:  lightpink">
                    <input asp-for="CustomerPerson.PersonName" class="form-control" style="background-color:  lightpink" />
                </div>
                <span asp-validation-for="CustomerPerson.PersonName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerPerson.Address" class="col-form-label text-info"></label>
                </div>
                <div class="col-6">
                    <input asp-for="CustomerPerson.Address" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerPerson.FKArea" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.CustomerPerson.FKArea" id="FKArea" asp-items="Model.FKArea.ToSelectListItem(Model.CustomerPerson.FKArea)" class="form-control"></select>
                </div>
                <div class="col-3">
                    <label asp-for="CustomerPerson.FKCity" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.CustomerPerson.FKCity" id="FKCity" asp-items="Model.FKCity.ToSelectListItem(Model.CustomerPerson.FKCity)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerPerson.FKPincode" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.CustomerPerson.FKPincode" id="FKPincode" asp-items="Model.FKPincode.ToSelectListItem(Model.CustomerPerson.FKPincode)" class="form-control"></select>
                </div>
                <div class="col-3">
                    <label asp-for="CustomerPerson.FKState" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.CustomerPerson.FKState" id="FKArea" asp-items="Model.FKState.ToSelectListStateName(Model.CustomerPerson.FKState)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerPerson.FKCountry" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.CustomerPerson.FKCountry" id="FKArea" asp-items="Model.FKCountry.ToSelectListItem(Model.CustomerPerson.FKCountry)" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerPerson.MobileNo" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="CustomerPerson.MobileNo" class="form-control" />
                </div>
                <div class="col-3">
                    <label asp-for="CustomerPerson.EMailId" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="CustomerPerson.EMailId" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerPerson.OfficePhoneNo" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="CustomerPerson.OfficePhoneNo" class="form-control" />
                </div>
                <div class="col-3">
                    <label asp-for="CustomerPerson.HomePhoneNo" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="CustomerPerson.HomePhoneNo" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerPerson.Gender" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="CustomerPerson.Gender" class="form-control" />
                </div>
                <div class="col-3">
                    <label asp-for="CustomerPerson.BirthDate" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="CustomerPerson.BirthDate" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    @*<label asp-for="CustomerPerson.IsMarried" class="col-form-label text-info"></label>*@
                </div>
                <div class="col-3">
                    @*<input asp-for="CustomerPerson.IsMarried" class="form-control" />*@
                </div>
                <div class="col-3">
                    <label asp-for="CustomerPerson.WeddingDate" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <input asp-for="CustomerPerson.WeddingDate" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerPerson.FKCustomerOf" class="col-form-label text-info"></label>
                </div>
                <div class="col-3">
                    <select asp-for="@Model.CustomerPerson.FKCustomerOf" id="FKArea" asp-items="Model.FKCustomerOf.ToSelectListItem(Model.CustomerPerson.FKCustomerOf)" class="form-control"></select>
                </div>
            </div>

            <input asp-for="CustomerPerson.ModifiedBy" readonly class="form-control" value="1" type="hidden" />
            <input asp-for="CustomerPerson.ModifiedDate" readonly class="form-control" value="@DateTime.Now" type="datetime" type="hidden" />

            <div class="form-group row">
                <div class="col-6 offset-3">
                    <partial name="_DeleteandBacktoListButtonPartialView" model="Model.CustomerPerson.Id" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            getLookUpMst();
        })

          function getLookUpMst() {
            var url = '@Url.Content("~/")' + "Admin/CustomerPerson/GetLookUpMst";
            var ddlSource = '#LkUpHdrId';
            $.getJSON(url, { id: $(ddlsoruce).val() }, function (data) {
                var items = '';
                $('#FKArea').empty();
                $.each(data, function (i, Area) {
                    items += "<option value='" + Area.value + "'>" + Area.text + "</option>";
                });

                $('#FKArea').html(items);
            })
        }



    </script>


}
