@model IEnumerable<OptimizerBeta3.Models.MasterTables.HSNCodeMaster>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroudColor">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">HSN Code - Index</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartialView" />
        </div>
    </div>
    <div></div>
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.HSNCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.PercentageType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.GSTPercentage)
                    </th>
                    <th><label>Actions</label></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.HSNCode)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PercentageType)
                </td>
                <td>
                    @Html.DisplayFor(m => item.GSTPercentage)
                </td>
                <td style="width:150px">
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p> No HSN Code Master exists.....</p>
        }
    </div>
</div>

