                <div class="col-5">
                    <select asp-for="@Model.PartyInfoDtls.FKCountry" id="FKCountry" asp-items="Model.FKCountry.ToSelectListItem(Model.PartyInfoDtls.FKCountry)" class="form-control"></select>
