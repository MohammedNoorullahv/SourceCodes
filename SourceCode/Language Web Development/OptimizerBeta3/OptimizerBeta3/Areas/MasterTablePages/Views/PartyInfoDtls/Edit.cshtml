                <h2 class="text-success">Party Info for Editing Unit's</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Company Code</label>
            </div>
            <div class="col-3">
                @TempData["PICode"]
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Party Type</label>
            </div>
            <div class="col-3">
                @TempData["PIGST"]
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Company Name</label>
            </div>
            <div class="col-3">
