@model IEnumerable<OptimizerBeta3.Models.TransactionTables.MaterialPurchaseOrderDetails>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.FKMaterial)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.DeliveryDate)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.FKMaterial)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Rate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.DeliveryDate)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p> No Purchase Order's exists.....</p>
    }
</div>

