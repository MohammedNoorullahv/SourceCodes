@model IEnumerable<OptimizerBeta3.Models.TransactionTables.DeliveryChallanDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var deliverychallan = (OptimizerBeta3.Models.TransactionTables.DeliveryChallan)TempData["DeliveryChallan"];
    TempData["DCId"] = @deliverychallan.Id;
}
@*@{TempData["DCId"] = @deliverychallan.Id};*@
<br />
<div class="border backgroudColor">
    <div class="backgroudWhite10Px">
        <div class="row">
            <div class="col-6">
                <h2 class="text-success">Stock Transfer Info</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label class="col-form-label text-danger">Stock Transfer No</label>
            </div>
            <div class="col-3">
                @deliverychallan.DCNo;
            </div>
            <div class="col-3">
                <label class="col-form-label text-danger">Stock Transfer Date</label>
            </div>
            <div class="col-3">
                @deliverychallan.DCDt;
            </div>
        </div>
    </div>
</div>


<div>
    <div class="row">
        <div class="col-4">
            <h2 class="text-info">Delivery Challan Details - Index</h2>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-info text-white" asp-action="DCDetailsCreate" asp-route-id="@deliverychallan.Id">
                <i class="fas fa-plus"></i>
                Create
            </a>
        </div>
        <div class="col-4 text-center">
            <a class="btn btn-success text-white  form-control" asp-action="Index">
                Back to Delivery Challan
            </a>
        </div>
    </div>
</div>


<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.DCNo)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.DCDate)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Quantity)
                </th>
                <th>
                    <label>Actions</label>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.DCNo)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.DCDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Quantity)
                    </td>
                    <td style="width:150px">

                        <div class="btn-group" role="group">
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>


                            <a class="btn btn-danger text-white" asp-action="Cancel" asp-route-Id="@item.Id">
                                <i class="far fa-times-circle"></i>
                            </a>

                        </div>


                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p> No Delivery Challan Detail's exists.....</p>
    }
</div>


