    });

    function ShowUploadOption() {
        if ($('#LoadFile').val() != "") {
            document.getElementById("ImpDtl").hidden = false;
        } else {
            document.getElementById("ImpDtl").hidden = true;
        }
    }

    function CalculateDeliveryDate() {
        var dtToday = new Date();
        var dlyDate = new Date();
        dlyDate.setDate(dtToday.getDate() + (parseInt($('#Remarks').val())));

        var month = dlyDate.getMonth() + 1;
        var day = dlyDate.getDate();
        var year = dlyDate.getFullYear();
        if (month < 10)
            month = '0' + month.toString();
        if (day < 10)
            day = '0' + day.toString();
        var dlDate = year + '-' + month + '-' + day;
        $("#DeliveryDt").val(dlDate);

    }
</script>

