<script type="text/javascript">



    function generateOrderValue() {
        $("#Value").val($("#TotalOrderQuantity").val() * $("#Rate").val());

        var nTotalQty = $("#TotalOrderQuantity").val();
        var nBalQty = ((parseInt(document.getElementById("POMainTotalOrderQuantity").value) || 0) - (parseInt(document.getElementById("POMainEnteredQuantity").value) || 0) + (parseInt(document.getElementById("PODtlTotalOrderQuantity").value) || 0));

        if (nTotalQty < (parseInt(document.getElementById("PODtlReceivedQuantity").value) || 0)) {
            $('#save').prop('hidden', true);
            alert("Entered Quantity should not be below Received Quantity")
        }
        else {

            if (nTotalQty > nBalQty) {
                $('#save').prop('hidden', true);
                alert("Entered Quantity exceeds Total Order Quantity - 1")
            }
            else {
                var nSizeQty = (parseInt(document.getElementById("Quantity01").value) || 0) + (parseInt(document.getElementById("Quantity02").value) || 0)
                    + (parseInt(document.getElementById("Quantity03").value) || 0) + (parseInt(document.getElementById("Quantity04").value) || 0)
