@model IEnumerable<OptimizerBeta3.Models.TransactionTables.StockWithArticle>
@{
    ViewData["Title"] = "GenStck";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Stock With Article</h2>
        </div>
    </div>
</div>

<br />
<div class="col-3">
    <a class="btn btn-success text-white  form-control" asp-action="Index">
        Back to Purchase Order's
    </a>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th> @Html.DisplayNameFor(m => m.StockNo) </th>
                <th> @Html.DisplayNameFor(m => m.Brand) </th>
                <th> @Html.DisplayNameFor(m => m.Product) </th>
                <th> @Html.DisplayNameFor(m => m.ArticleNo) </th>
                <th> @Html.DisplayNameFor(m => m.ArticleDescription) </th>
                <th> @Html.DisplayNameFor(m => m.Variant) </th>
                <th> @Html.DisplayNameFor(m => m.ColorDescription) </th>
                <th> @Html.DisplayNameFor(m => m.Size) </th>
                <th> @Html.DisplayNameFor(m => m.ItemDescription) </th>
                <th> @Html.DisplayNameFor(m => m.ArticleName) </th>
                <th> @Html.DisplayNameFor(m => m.Group) </th>
                <th> @Html.DisplayNameFor(m => m.Quantity) </th>
                <th> @Html.DisplayNameFor(m => m.ArrivedQty) </th>
                <th> @Html.DisplayNameFor(m => m.SoldQty) </th>
                <th> @Html.DisplayNameFor(m => m.BalQty) </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(m => item.StockNo) </td>
                    <td> @Html.DisplayFor(m => item.Brand) </td>
                    <td> @Html.DisplayFor(m => item.Product) </td>
                    <td> @Html.DisplayFor(m => item.ArticleNo) </td>
                    <td> @Html.DisplayFor(m => item.ArticleDescription) </td>
                    <td> @Html.DisplayFor(m => item.Variant) </td>
                    <td> @Html.DisplayFor(m => item.ColorDescription) </td>
                    <td> @Html.DisplayFor(m => item.Size) </td>
                    <td> @Html.DisplayFor(m => item.ItemDescription) </td>
                    <td> @Html.DisplayFor(m => item.ArticleName) </td>
                    <td> @Html.DisplayFor(m => item.Group) </td>
                    <td> @Html.DisplayFor(m => item.Quantity) </td>
                    <td> @Html.DisplayFor(m => item.ArrivedQty) </td>
                    <td> @Html.DisplayFor(m => item.SoldQty) </td>
                    <td> @Html.DisplayFor(m => item.BalQty) </td>
                    <td>
                    </td>
                    <td style="width:150px">
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p> No Invoice exists.....</p>
    }
</div>


